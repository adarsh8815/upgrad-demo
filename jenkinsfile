pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                echo 'Checkout SCM Stage'
            }
        }
        stage('Build the code') {
            steps {
                echo 'Build the code'
            }
        }
        stage('Test the code') {
            steps {
                echo 'Test the code'
            }
        }
        stage('Deploy the code') {
            steps {
                echo 'Deploy the code'
            }
        }
    }
}
